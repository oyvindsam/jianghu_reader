<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/novel_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_add_novel"
            style="@style/CardViewList"
            tools:text="Upgrade Specialist in Another World" />

        <ImageView
            android:id="@+id/btn_add_novel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            tools:ignore="RtlHardcoded"
            tools:src="@drawable/ic_add_circle_outline_white_24dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>