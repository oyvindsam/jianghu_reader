<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarTrackVertical">@android:color/transparent</item>
        <item name="android:scrollbarThumbVertical">@color/colorDarkGray</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <style name="NovelText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">24dp</item>
    </style>


    <style name="CardViewNovel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="CardViewList" parent="@style/CardViewNovel">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
    </style>

    <style name="CardViewGrid" parent="@style/CardViewNovel">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:numColumns">2</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
